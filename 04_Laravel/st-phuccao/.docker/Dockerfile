FROM php:8.1-fpm

# Get argument defined in docker-compose file
ARG user=defaultUser
ARG uid=1000

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    && docker-php-ext-install pdo_mysql \
    && docker-php-ext-install mbstring \
    && docker-php-ext-install exif \
    && docker-php-ext-install pcntl \
    && docker-php-ext-install bcmath \
    && docker-php-ext-install gd \
    && docker-php-source delete

# RUN sudo apt-get install php-gd php-mysql
# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Get latest Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Create system user to run Composer and Artisan Commands
RUN useradd -G www-data -u $uid -d /home/$user $user
RUN mkdir -p /home/$user/.composer && \
    chown -R $user:$user /home/$user

# Set working directory
WORKDIR /var/www
ADD . /var/www
RUN chown -R www-data:www-data /var/www

# Make the storage and bootstrap/cache directories
RUN mkdir -p storage bootstrap/cache

# Set proper permissions for Laravel storage and log directories
RUN chown -R $user:www-data storage bootstrap/cache
RUN  chown -R www-data:www-data /var/www/storage
RUN chmod -R 777 storage
# Switch to non-root user
USER $user

CMD ["php-fpm"]

